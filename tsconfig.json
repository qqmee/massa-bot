{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true,
    "pretty": true,
    "paths": {
      "@env": ["./env"],
      "@cron/*": ["./apps/cron/*"],
      "@bot/*": ["./apps/bot/*"],
      "@shared/*": ["./shared/*"],
      "@libs/*": ["./libs/*"]
    }
  }
}
